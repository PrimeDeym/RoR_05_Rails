<div>
  <% if @petition.errors.any? %>
    <%= pluralize(@petition.errors.count, 'error')%>: 
    <% @petition.errors.full_messages.each do |ms| %>
      <%= ms %>
    <% end %>
  <% end %>
</div>
<div class="form-group">
  <%= form_for @petition do |f| %>
    <div class="form-group">
      <%= f.label 'Название' %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
   
    <div class="form-group">
      <%= f.label 'Описание' %><br>
      <%= f.text_area :text, class: 'form-control', rows: '5' %>
    </div>
    <div class="action">
      <%= submit_tag @petition.new_record? ? 'Cоздать' : 'Сохранить', class: 'btn btn-success' %>  
    </div>
  <% end %>
</div>