<h2>Новая петиция</h2>
<p>
  <% if @petition.errors.any? %>
    <%= pluralize(@petition.errors.count, 'error')%>: 
    <% @petition.errors.full_messages.each do |ms| %>
      <%= ms %>
    <% end %>
  <% end %>
</p>
<%= form_for :petition, url: petitions_path do |f| %>
  <p>
    <%= f.label 'Название' %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label 'Описание' %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit 'Создать' %>
  </p>
<% end %>
<%= link_to 'Назад', petitions_path %>
