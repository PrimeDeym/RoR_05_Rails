<%= link_to 'Главная страница', root_url %>
<h1>Обновить петицию</h1>
<div>
  <% if @petition.errors.any? %>
  <%= pluralize(@petition.errors.count, 'error')%>: 
  <% @petition.errors.full_messages.each do |ms| %>
  <%= ms %>
  <% end %>
  <% end %>
</div>
<%= form_for :petition, url: petition_path, method: :patch do |f| %>
  <p>
    <%= f.label "Название" %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label "Описание" %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit "Обновить" %>
  </p>
<% end %>
<%= link_to 'Назад', petitions_path %>
